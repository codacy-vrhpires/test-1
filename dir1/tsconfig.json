{
    "compilerOptions": {
        "esModuleInterop": true,
        "incremental": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "module": "commonjs",
        "noErrorTruncation": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": false,
        "target": "es6"
    },
    "include": [
        "**/*.ts",
        "**/*.js"
    ]
}